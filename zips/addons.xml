<addon id="plugin.video.betamedia4u" name="Media4u TV Beta" version="1.1" provider-name="Bang">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Media4u TV for Kodi</summary>
        <description lang="en_GB">Watch Live TV from Media4u</description>
        <platform>all</platform>
        <language>en_GB</language>
        <license>GPL-2.0-or-later</license>
        <disclaimer>This add-on does not host any content.</disclaimer>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

