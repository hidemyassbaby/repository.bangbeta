<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.kleanix"
       name="Kleanix Wizard"
       version="1.0.0"
       provider-name="Bang">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">All-in-One Kodi Wizard and Maintenance Tool</summary>
        <description lang="en">Kleanix: Clean, backup, and restore your Kodi builds with ease.</description>
        <platform>all</platform>
    </extension>
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
</addon>
